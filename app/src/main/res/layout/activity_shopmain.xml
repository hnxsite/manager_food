<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".ShopMainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tomato_toolbar"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shopname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/hacen_beirut_bight"
                android:text="مطعم السعادة"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statusshop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/hacen_beirut_bight"
                android:text="حالة المطعم"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/basketmain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/hacen_beirut_bight"
                    android:text="مغلق"
                    android:textColor="@color/red"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/offer_switch_main"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textOff="OFF"
                    android:textOn="ON"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView_sm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">


        <LinearLayout
            android:id="@+id/linearlayoutallprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/bottomNavigationView_sm">

            <TextView
                android:id="@+id/totalTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/hacen_beirut_bight"
                android:gravity="center_horizontal"
                android:padding="6dp"
                android:paddingStart="15dp"
                android:text="معلومات المطعم"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <TextView
                android:id="@+id/placeres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:fontFamily="@font/hacen_beirut_bight"
                android:gravity="right"
                android:padding="6dp"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_placeholder"
                android:text="المكان : لبامة-البياضة"
                android:textColor="@color/red"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/hacen_beirut_bight"
                android:gravity="center_horizontal"
                android:padding="6dp"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:text="التقييم 5.0"
                android:textColor="@color/green"
                android:textSize="25sp"
                android:textStyle="bold" />

            </LinearLayout>


            <TextView
                android:id="@+id/tootalcategoriesinshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/hacen_beirut_bight"
                android:gravity="center_horizontal"
                android:padding="6dp"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:text="عدد الأصناف : xxxx"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tootaliteminshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/hacen_beirut_bight"
                android:gravity="center_horizontal"
                android:padding="6dp"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:text="عدد المنتجات : xxxx"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/hacen_beirut_bight"
                android:gravity="center_horizontal"
                android:padding="6dp"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:text="عدد الطلبات الكلي : xxxx"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ordercompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/hacen_beirut_bight"
                android:gravity="center_horizontal"
                android:padding="6dp"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:text="عدد الطلبات المكتملة : xxxx"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/orderpending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/hacen_beirut_bight"
                android:gravity="center_horizontal"
                android:padding="6dp"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:text="عدد الطلبات قيد التحضير : xxxx"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/ordercancelled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/hacen_beirut_bight"
                android:gravity="center_horizontal"
                android:padding="6dp"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:text="عدد الطلبات الملغية : xxxx"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/topage"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:background="@drawable/tomato_button"
                android:fontFamily="@font/hacen_beirut_bight"
                android:padding="10dp"
                android:layout_gravity="center"
                android:text="متابعة"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView_sm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/tomato_red"
        app:itemTextColor="@color/tomato_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
